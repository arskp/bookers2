<div class ="container px-5 px-sm-0">
  <div class ="row">
    <div class ="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class ="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class ="row">
        <i class="fa-solid fa-user-gear"></i>
        <%= link_to , edit_user_path(@user.id) %>
      </div>
      
    </div>
  </div>
</div>