<div class ="container px-5 px-sm-0">
  <div class ="row">
    <div class ="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class ="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class ="row">
        <i class="fa-solid fa-user-gear"></i>
        <%= link_to "", edit_user_path(@user.id) %>
      </div>
      <h2 class ="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="field">
          <h5>Title</h5>
          <div class="text-field">
            <%= f.text_field :title %>
          </div>
        </div>

        <div class="field">
          <h5>Opinion</h5>
          <div class="text-field">
            <%= f.text_area :body %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    <div class ="col-md-8 offset-md-8">
      <h2>Books</h2>
      <table class ="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %><%= link_to '', book %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>